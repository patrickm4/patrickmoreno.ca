<nav>
	{ Astro.url.pathname !== '/' && 
		<a class="link" href="/">
			<div class="monogram" id="monogram">PM</div>
		</a>
	}
	<a class="link" href="/about/"> About</a>	
	<a class="link" href="/projects/"> Portfolio</a>
	<div class="email-link-container" id="email-link-container">
		<a class="link" id="email-nav-link" href="mailto:patrickmoreno444@gmail.com">Email</a>
	</div>
	<!-- <a class="link" href="/posts/"> Posts</a> -->
</nav>

<script>
	const emailNavLink = document.getElementById('email-nav-link')
	const emailLinkContainer = document.getElementById('email-link-container')
	const monogram = document.getElementById('monogram')

	monogram?.addEventListener('mouseenter', () => {
		monogram.style.borderRadius = '0'
	})
	monogram?.addEventListener('mouseleave', () => {
		monogram.style.borderRadius = '50%'

	})


	emailLinkContainer?.addEventListener('mouseenter', () => {
		if (emailNavLink) {
			emailNavLink.innerText = 'patrickmoreno444@gmail.com'
			emailNavLink.style.color = '#282c34'
		}
		emailLinkContainer.style.width = '240px'
		emailLinkContainer.style.backgroundColor = `var(--atom-string)`
		emailLinkContainer.style.borderRadius = '25px'
	})
	emailLinkContainer?.addEventListener('mouseleave', () => {
		if (emailNavLink) {
			emailNavLink.style.backgroundColor = ''
			emailNavLink.innerText = 'Email'
			emailNavLink.style.color = '#98c379'
		}
		if (window.innerWidth <= 750) {
			emailLinkContainer.style.width = '55px'
		} else {
			emailLinkContainer.style.width = '42px'
		}
		emailLinkContainer.style.backgroundColor = ''
		emailLinkContainer.style.borderRadius = '0px'
		
	})

</script>

